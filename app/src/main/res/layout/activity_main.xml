<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ten"></TextView>

        <EditText
            android:layout_marginLeft="52dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ed1"
            android:hint="NHAP TEN"
            ></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/r1"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSV"></TextView>

        <EditText
            android:layout_marginLeft="52dp"
            android:layout_marginRight="40dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ed2"
            android:hint="NHAP MA SINH VIEN"
            ></EditText>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r3"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/r2"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diem tb"></TextView>

        <EditText
            android:layout_marginLeft="52dp"
            android:layout_marginRight="40dp"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Ed3"
            android:hint="NHAP DIEM"
            ></EditText>
    </RelativeLayout>



  <RelativeLayout
      android:layout_marginLeft="22dp"
      android:id="@+id/r4"
      android:layout_below="@+id/r3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tbn1"
          android:text="ADD"
          ></Button>
      <Button
          android:id="@+id/tbn2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/tbn1"
          android:text="DELETE ALL"
          android:layout_marginLeft="22dp"
          ></Button>
      <Button
          android:id="@+id/tbn3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TOTAL"
          android:layout_toRightOf="@id/tbn2"
          android:layout_marginLeft="22dp"
          ></Button>
  </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="22dp"
        android:id="@+id/r5"
        android:layout_below="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/LvUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tbn1"></ListView>
    </RelativeLayout>




</RelativeLayout>